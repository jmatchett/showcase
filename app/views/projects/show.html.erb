<p id="notice"><%= notice %></p>
<div class="row">
	<div class="column small-12">
		<h1><%= @project.title %></h1>
	</div>
	<div class="column small-12 medium-3">
		<p><%= @project.brief %></p>
		<p><%= link_to "Live Site", @project.link, target: "_blank" %></p>
		<p><%= link_to "Github Repo", @project.github, target: "_blank" %></p>
	</div>
	<div class="column small-12 medium-9">
		<p><%= image_tag @project.image.url %></p>
		<p><%= @project.description %></p>
	</div>
</div>

<% if user_signed_in? %>
	<%= link_to 'Edit', edit_project_path(@project) %> |
	<%= link_to 'Back', projects_path %>
<% end %>
